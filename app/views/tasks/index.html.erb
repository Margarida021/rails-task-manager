<div class="container text-center mt-5">
  <div>
    <h1>My Tasks</h1>
  </div>
  <div class="d-flex justify-content-center align-items-center mt-4">
    <% @tasks.each do |task| %>
      <p class="list-group-item list-group-item-info rounded"><%= link_to task.title, task_path(task.id) %></p>
      <% if task.completed %>
        <p><i class="fa-solid fa-face-smile"></i></i></p>
      <% else %>
        <p>â¬œ</p>
      <% end %>
    <% end %>
  </div>
  <div>
    <%= link_to "Create a new task!", new_task_path, class:"btn btn-info font-weight-bold text-white" %>
  </div>
</div>
